@model Tp1Module6.Models.SamouraiCreateEditVM

@{
    ViewBag.Title = "Details";
}

<h2>Details d'un samouraï</h2>


<h4>Samourai</h4>
<hr />
<div class="form-group">
    @Html.LabelFor(model => model.Samourai.Force, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DisplayFor(model => model.Samourai.Force, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Samourai.Force, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Samourai.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DisplayFor(model => model.Samourai.Nom)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Samourai.Arme, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @if (Model.Armes != null && Model.Armes.Count > 0)
        {
            @Html.DropDownListFor(model => model.IdSelectedArme, Model.Armes.Select(x => new SelectListItem() { Text = x.Nom, Value = x.Id.ToString() }), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Samourai.Arme, "", new { @class = "text-danger" })
        }
        else
        {
            @Html.DisplayFor(model => model.Samourai.Arme.Nom)
        }

    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Samourai.ArtMartiaux, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @if (Model.ArtMartiaux != null && Model.ArtMartiaux.Count > 0)
        {
            @Html.ListBoxFor(model => model.ArtMartiauxId, Model.ArtMartiaux.Select(x => new SelectListItem() { Text = x.Nom, Value = x.Id.ToString() }), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Samourai.ArtMartiaux, "", new { @class = "text-danger" })
        }
        else
        {
            @Html.ListBoxFor(model => model.ArtMartiauxId, Model.Samourai.ArtMartiaux.Select(x => new SelectListItem() { Text = x.Nom }), new { @class = "form-control", @disabled = "disabled" })
        }
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Samourai.Potentiel, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DisplayFor(model => model.Samourai.Potentiel)
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Samourai.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
